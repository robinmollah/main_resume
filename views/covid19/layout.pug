html
	head
		title Covid 19 Situation Room
		script(type='text/javascript', src="https://code.jquery.com/jquery-1.9.1.min.js")
		meta(property="og:title", content="Covid-19 Situation in Bangladesh")
		meta(property="og:description", content="Coronavirus situation in Bangladesh")
		meta(property="og:image", content="http://properbd.net/images/corona.jpg")
		link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto|Saira|Saira+Condensed&display=swap')
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
		link(rel='stylesheet', href='./stylesheets/covid19/styles.css')
		script(src='https://www.gstatic.com/charts/loader.js' type='text/javascript')
		script(type="text/javascript").
			setTimeout(function(){
				location = '';
			}, 95500);
		script(type="text/javascript").
			google.charts.load('current', {'packages':['corechart']});
			google.charts.setOnLoadCallback(drawChart);
			function drawChart() {
				var data = new google.visualization.DataTable();
				data.addColumn('date', 'Date');
				data.addColumn('number', "Tested Positive");
				data.addColumn('number', "Death");

				data.addRows([
						[new Date(2020, 2, 7), 1, 0],
						[new Date(2020, 2, 8), 3, 0],
						[new Date(2020, 2, 9), 3, 0],
						[new Date(2020, 2, 10), 3, 0],
						[new Date(2020, 2, 11), 3, 0],
						[new Date(2020, 2, 12), 3, 0],
						[new Date(2020, 2, 13), 3, 0],
						[new Date(2020, 2, 14), 3, 0],
						[new Date(2020, 2, 15), 3, 0],
						[new Date(2020, 2, 16), 6, 0],
						[new Date(2020, 2, 17), 8, 0],
						[new Date(2020, 2, 18), 8, 1],
						[new Date(2020, 2, 19), 11, 1],
						[new Date(2020, 2, 20), 14, 1],
						[new Date(2020, 2, 21), 24, 2],
						[new Date(2020, 2, 22), 27, 2],
						[new Date(2020, 2, 23), 33, 3],
						[new Date(2020, 2, 24), 39, 4],
						[new Date(2020, 2, 24), 39, 5],
				]);
				var options = {
					title: 'Corona virus',
					width: 800,
					height: 400,
					hAxis: {
						format: 'MMM dd, yyyy',
						gridlines: {count: 15}
					},
					vAxis: {
						gridlines: {color: 'none'},
						minValue: 0,
			  		viewWindowMode: "explicit",
						viewWindow:{ min: 0 }
					},
					curveType: 'function'
				};

				var chart = new google.visualization.LineChart(document.getElementById('curve_chart'));

				chart.draw(data, options);
			}
