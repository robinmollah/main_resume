style(type="text/css").
    .palette-picker {
        display: flex;
        font-size: 2em;
        justify-content: center;
    }

    .palette {
        border: 2px solid lightgray;
        width: 6em;
        height: 2em;
        margin: 0.8em 0.4em;
        height: 2em;

        display: flex;
        justify-content: center;
        align-items: center;
    }

    .palette:hover {
        border: 2px solid #898989;
        box-shadow: #1d4d4f 0px 1px 10px;
    }

    .bg-red, .bg-red:hover {
        background-color: ghostwhite;
        color: black;
    }


    .bg-green, .bg-green:hover {
        color: black;
    }

    .bg-orange, .bg-orange:hover {
        background-color: #0077BF;
        color: white;
    }

    .bg-blue, .bg-blue:hover {
        background-color: #3B5998;
        color: white;
    }

    #quote-content {
        border-radius: 1em;
    }
