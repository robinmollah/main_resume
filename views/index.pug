	style.
		.ek-page {
			height: 100vh;
			display: flex;
			flex-direction: column;
			justify-content: space-evenly;
		}

		#next-page, #next-page:active {
			color: black;
			font-size: 2em;
			text-align: center;
			position: relative;
		}

		#next-page-holder {
			text-align: center;
		}


		#cv_content {
			padding: 1em;
		}


		button {
			background: steelblue;
			color: white;
			margin: 1em;
			width: 20%;
			height: 40px;
			border: none;
			border-radius: 0.5em;
			transition: font-size 0.3s;
		}

		button:hover {
			font-size: 32px;
		}

		.list {
			color: steelblue;
			background: #dcd9d9;
			text-align: left;
			min-width: 170px;
			border: 1px solid steelblue;
		}

		.list p {
			transition: background-color, color 0.3s;
			padding: 1em 1em;
			margin: 0em;
		}

		.list p:hover {
			background: #6ba8a9;
			color: white;
		}

		.list p.selected {
			background: #6ba8a9;
			color: white;
		}
